<Page x:Class="WSRDemo.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WSRDemo"
      mc:Ignorable="d"
      Title="Авторизация" Height="250" Width="500">
    <Grid Margin="0,0,0,-6">
        <TextBox Name="LoginTextBox" Text="Логин" Margin="0,40,0,0" TextWrapping="Wrap" Background="White"
                 FontSize="16" Foreground="#FFB5AEAE" HorizontalAlignment="Center" Width="404" Height="28"
                 VerticalAlignment="Top" />
        <TextBox Name="PasswordTextBox" HorizontalAlignment="Center" Margin="0,100,0,0" TextWrapping="Wrap"
                 Text="Пароль" Background="White" FontSize="16" Foreground="#FFB5AEAE" VerticalAlignment="Top"
                 Width="404" Height="28" />
        <Button Name="LoginButton" Style="{StaticResource ButtonStyle}" Content="Авторизоваться"
                HorizontalAlignment="Center" VerticalAlignment="Top" Width="404" Height="32" Margin="0,182,0,0"
                FontSize="16" Click="LoginButton_OnClick" />

    </Grid>
</Page>